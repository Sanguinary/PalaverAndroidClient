<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:weightSum="5">

    <RelativeLayout
        android:id="@+id/text_layout_view"
        android:layout_width="@dimen/text_message_width"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="3dp">

        <TextView android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorPrimaryTextDark"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="14dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_layout_view">

        <TextView android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorHintTextDark"
            android:textSize="8dp"/>
    </RelativeLayout>

</RelativeLayout>